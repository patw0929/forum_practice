<div class="posts">

  <h1>文章列表</h1>

  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to(post.title, post) %> 
        [<%= link_to("編輯", edit_post_path(post)) %>] 
        [<%= link_to("刪除", post, :method => :delete, :data => { :confirm => "確認要刪除嗎？" }) %>]
      </li>
    <% end %>
  </ul>

</div>


<p><%= link_to( "新增文章", new_post_path ) %></p>
<p><%= link_to( "返回版塊列表", boards_path ) %></p>