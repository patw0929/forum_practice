<h1>建立新版塊</h1>

<%= form_for(@board) do |f| %>

  <% if @board.errors.any? %>
  <h2>發生錯誤</h2>

  <ul>
    <% @board.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <%= f.label :name %><br />
  <%= f.text_field :name %>

  <%= f.submit %>

<% end %>

<%= link_to('返回', boards_path)%>